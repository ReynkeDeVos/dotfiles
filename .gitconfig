[init]
  defaultBranch = main
[core]
  editor = code --wait
[gpg]
  format = ssh
[commit]
  gpgsign = true
[pull]
  rebase = true
[alias]
  update = "!f() { \
    local branch=$(git rev-parse --abbrev-ref HEAD); \
    local msg=${1:-\"WIP on $branch\"}; \
    echo \"âœ… Adding and committing local changes...\"; \
    git add .; \
    if ! git diff --staged --quiet; then \
      git commit -m \"$msg\" || return; \
    else \
      echo \"â„¹ï¸ No local changes to commit. Proceeding to update branch.\"; \
    fi; \
    echo \"ğŸ”€ Switching to main...\"; \
    git switch main || return; \
    echo \"â¬‡ï¸  Pulling latest main...\"; \
    git pull --ff-only || return; \
    echo \"ğŸ  Switching back to $branch...\"; \
    git switch \"$branch\" || return; \
    echo \"ğŸ”— Merging main into $branch...\"; \
    git merge main --no-ff --no-edit || return; \
    echo \"ğŸš€ Pushing $branch...\"; \
    git push origin \"$branch\"; \
    echo \"âœ… Branch '$branch' is updated and pushed.\"; \
  }; f"

[include]
  path = ~/.gitconfig.local